{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "All",
            "configurations": [
                "RobbyBot",
                "GameMaster",
                "WebClient"
            ]
        }
    ],
    "configurations": [
        {
            "name": "GameMaster",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/GameMaster/bin/Debug/netcoreapp3.0/GameMaster.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/GameMaster",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_AzureAppConfigConnectionString" : ""
            }
        },
        {
            "name": "RobbyBot",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/RobbyBot/bin/Debug/netcoreapp3.0/RobbyBot.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/RobbyBot",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "DOTNET_ENVIRONMENT": "Development",
                "DOTNET_AzureAppConfigConnectionString" : ""
            }
        },
        {
            "name": "WebClient",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Rochambot/bin/Debug/netcoreapp3.0/Rochambot.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Rochambot",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_AzureAppConfigConnectionString" : ""
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}